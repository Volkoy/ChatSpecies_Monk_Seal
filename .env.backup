# ==========================================
# ChatSpecies Environment Configuration Template
# ==========================================
# Usage Instructions:
# 1. Copy this file as .env
# 2. Populate with actual API Keys and configuration
# 3. Ensure .env is added to .gitignore
# ==========================================

# ------------------------------------------
# Core LLM Configuration (Required)
# ------------------------------------------

# Qwen (General-Purpose Question-Answering) API
# Access URL: https://dashscope.aliyun.com/
DASHSCOPE_API_KEY=sk-534bbe53230e4935a31980bfdde10b43

# Model Selection
QWEN_MODEL_NAME=qwen-plus
# Available options: qwen-turbo (recommended), qwen-plus, qwen-max

# Temperature Parameter Configuration
QWEN_TEMPERATURE_CONVERSATION=0.0
QWEN_TEMPERATURE_SCORING_POS=0.2
QWEN_TEMPERATURE_SCORING_NEG=0.0
QWEN_TEMPERATURE_SEMANTIC=0.4
QWEN_TEMPERATURE_ROUTER=0.0

# ------------------------------------------
# Vector Embedding Configuration (Required)
# ------------------------------------------

QWEN_EMBEDDING_MODEL=text-embedding-v3
VECTOR_DB_PATH=db6_qwen

# ------------------------------------------
# Text-to-Speech Configuration (Required) - Qwen TTS
# ------------------------------------------

# TTS Provider
TTS_PROVIDER=qwen
# Available options: qwen (recommended), gtts (fallback)

# Qwen TTS Configuration
QWEN_TTS_MODEL=cosyvoice-v1
QWEN_TTS_VOICE=longxiaochun
# Available voices: Cherry (female, lively), Ethan (male) and so on

QWEN_TTS_LANGUAGE=Chinese
QWEN_TTS_STREAM=true

# Downgrade Configuration
USE_GTTS_FALLBACK=true

# ------------------------------------------
# Agent Search Configuration (Optional)
# ------------------------------------------

USE_WEB_SEARCH=true
WEB_SEARCH_PROVIDER=duckduckgo
ENABLE_SMART_ROUTING=true
ROUTING_CONFIDENCE_THRESHOLD=0.7

# Tavily（Optional）
TAVILY_API_KEY=tvly-your-api-key
TAVILY_MAX_RESULTS=3

# ------------------------------------------
# RAG Retrieval Configuration
# ------------------------------------------

RAG_MMR_K=4
RAG_MMR_FETCH_K=20
RAG_MMR_LAMBDA=0.5

ENABLE_HISTORY_DEDUP=true
